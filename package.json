{
  "private": true,
  "workspaces": [
    "cloudfunctions/*",
    "app"
  ],
  "scripts": {
    "test": "CI=true lerna run test",
    "build": "lerna run build",
    "clean": "lerna run --parallel clean",
    "start": "lerna run --scope app start",
    "deploy": "tcb framework deploy",
    "types-to-schema": "sh types-to-schema.sh",
    "postinstall": "patch-package",
    "prettier": "prettier --write",
    "prepare": "husky install"
  },
  "lint-staged": {
    "cloudfunctions/todos-types/src/*.ts": [
      "yarn types-to-schema"
    ],
    "*.{js,ts,tsx,css,scss,md,json}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "husky": "^7.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^11.2.6",
    "patch-package": "^6.4.7",
    "prettier": "^2.4.1",
    "typescript-json-schema": "^0.52.0"
  }
}
