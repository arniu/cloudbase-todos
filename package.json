{
  "private": true,
  "workspaces": [
    "cloudfunctions/*",
    "app"
  ],
  "scripts": {
    "test": "lerna run test",
    "build": "lerna run build",
    "clean": "lerna run --parallel clean",
    "start": "lerna run --scope app start",
    "deploy": "tcb framework deploy",
    "postinstall": "patch-package",
    "prettier": "prettier --write .",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,ts,tsx,css,scss,md,json}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "husky": "^7.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^11.2.6",
    "patch-package": "^6.4.7",
    "prettier": "^2.4.1"
  }
}
